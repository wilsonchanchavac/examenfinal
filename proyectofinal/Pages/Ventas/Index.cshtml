@page
@model proyectofinal.Pages.Ventas.IndexModel
@{
    ViewData["Title"] = "Ventas";
}

<div class="container">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">Lista de Ventas</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-secondary" asp-page="/Ventas/Crear">Agregar Venta</a>
        </div>
    </div>
    <br />
    @if (Model.Ventas.Count() > 0)
    {
        <table id="tblClientes" class="table table-striped table-bordered tables alert-warning" style="width: 100%">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Ventas.FirstOrDefault().CodigoVenta)</th>
                    <th>@Html.DisplayNameFor(m => m.Ventas.FirstOrDefault().CodigoCliente.NombresCliente)</th>
                    <th>@Html.DisplayNameFor(m => m.Ventas.FirstOrDefault().CodigoCliente.ApellidosCliente)</th>
                    <th>@Html.DisplayNameFor(m => m.Ventas.FirstOrDefault().CodigoCliente.NITCliente)</th>
                    <th>@Html.DisplayNameFor(m => m.Ventas.FirstOrDefault().FechaVenta)</th>
                    <th>@Html.DisplayNameFor(m => m.Ventas.FirstOrDefault().TipoVenta)</th>
                    <th>@Html.DisplayNameFor(m => m.Ventas.FirstOrDefault().EstadoVenta)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var venta in Model.Ventas)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => venta.CodigoVenta)</td>
                        <td>@Html.DisplayFor(m => venta.CodigoCliente.NombresCliente)</td>
                        <td>@Html.DisplayFor(m => venta.CodigoCliente.ApellidosCliente)</td>
                        <td>@Html.DisplayFor(m => venta.CodigoCliente.NITCliente)</td>
                        <td>@Html.DisplayFor(m => venta.FechaVenta)</td>
                        <td>@Html.DisplayFor(m => venta.TipoVenta)</td>
                        <td>@Html.DisplayFor(m => venta.EstadoVenta)</td>
                        <td>
                            
                            <div class="btn-group btn-group-justified">
                                <a class="btn btn-success" asp-page="../Ventas/Detalle" asp-route-id="@venta.CodigoVenta">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-text" viewBox="0 0 16 16">
                                        <path d="M5 4a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1H5zm-.5 2.5A.5.5 0 0 1 5 6h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zM5 8a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1H5zm0 2a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1H5z" />
                                        <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z" />
                                    </svg>
                                </a>

                                <a class="btn btn-danger" asp-page="../Ventas/Borrar" asp-route-id="@venta.CodigoVenta">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                    </svg>
                                </a>
                            </div>

                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p>No hay ventas que mostrar</p>
    }
</div>