@page
@model proyectofinal.Pages.Clientes.IndexModel
@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="container">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">Lista de Clientes</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-secondary" asp-page="/Clientes/Crear">Agregar Cliente</a>
        </div>
    </div>
    <br />
    @if (Model.Clientes.Count() > 0)
    {
        <table id="tblClientes" class="table table-striped table-bordered tables alert-warning" style="width: 100%">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Clientes.FirstOrDefault().CodigoCliente)</th>
                    <th>@Html.DisplayNameFor(m => m.Clientes.FirstOrDefault().NombresCliente)</th>
                    <th>@Html.DisplayNameFor(m => m.Clientes.FirstOrDefault().ApellidosCliente)</th>
                    <th>@Html.DisplayNameFor(m => m.Clientes.FirstOrDefault().NITCliente)</th>
                    <th>@Html.DisplayNameFor(m => m.Clientes.FirstOrDefault().EstadoCliente)</th>
                    <th>@Html.DisplayNameFor(m => m.Clientes.FirstOrDefault().FechaCreacion)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model.Clientes)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => cliente.CodigoCliente)</td>
                        <td>@Html.DisplayFor(m => cliente.NombresCliente)</td>
                        <td>@Html.DisplayFor(m => cliente.ApellidosCliente)</td>
                        <td>@Html.DisplayFor(m => cliente.NITCliente)</td>
                        <td>@Html.DisplayFor(m => cliente.EstadoCliente)</td>
                        <td>@Html.DisplayFor(m => cliente.FechaCreacion)</td>
                        <td>
                         
                            <div class="btn-group btn-group-justified">
                                <a class="btn btn-success" asp-page="../Clientes/Detalle" asp-route-id="@cliente.CodigoCliente">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-text" viewBox="0 0 16 16">
                                        <path d="M5 4a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1H5zm-.5 2.5A.5.5 0 0 1 5 6h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zM5 8a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1H5zm0 2a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1H5z" />
                                        <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z" />
                                    </svg>
                                </a>

                                <a class="btn btn-primary" asp-page="../Clientes/Editar" asp-route-id="@cliente.CodigoCliente">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                    </svg>
                                </a>

                                <a class="btn btn-danger" asp-page="../Clientes/Borrar" asp-route-id="@cliente.CodigoCliente">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                    </svg>
                                </a>
                            </div>

        </td>
        </tr>
    }

                </tbody>
                </table>
            }
            else
            {
                <p>No hay Clientes</p>
            }
    </div>
